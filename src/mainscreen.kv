<MainPanel>:
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)

    GridLayout:
        cols: 3

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Welcome to application"
            font_size: 32
        Label:
            text: app.username
            font_size: 32
        Label:
            text: app.password
            font_size: 32
        Button:
            text: "Disconnect"
            font_size: 24
            on_press: root.disconnect()
