<Login>:
    id: login_layout
    orientation: 'vertical'
    padding: [10,20,10,20]
    spacing: 20

    Label:
        text: 'Welcome'
        font_size: 25

    Label:
        id: loginErrors
        #font_size: 14
        halign: 'right'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: 'Database'
                #font_size: 14
                halign: 'right'
                #text_size: root.width-20, 20

            Button:
                text: 'Cambiar'
                #font_size: 14
                on_press: app.menu_basedatos(dbpath.text)

        TextInput:
            id: dbpath
            multiline:False
            #font_size: 14

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Login'
            #font_size: 14
            halign: 'left'
            #text_size: root.width-20, 20

        TextInput:
            id: login
            multiline:False
            #font_size: 14

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Password'
            halign: 'left'
            #font_size: 14
            #text_size: root.width-20, 20

        TextInput:
            id: password
            multiline:False
            password:True
            #font_size: 14

    BoxLayout:
        orientation: 'horizontal'

        Button:
            text: 'Ingresar'
            font_size: 24
            size_hint_x: 6
            on_press: root.do_login(login.text, password.text, dbpath.text)

        Label

        ActionQuit:
            text: 'Salir'
            icon: 'atlas://data/images/defaulttheme/close'
            on_press: app.do_quit()

