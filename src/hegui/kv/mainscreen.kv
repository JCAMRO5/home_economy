<MainPanel>:
    orientation: 'vertical'
    spacing: 1

    main_cuentas: main_cuentas

    AppActionBar:
        size_hint: (1., 0.1)

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Welcome to application"
            font_size: 32
            size_hint_y: 0.3

        RV:
            size_hint_y: 0.2
            viewclass: 'Label'

            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, 0.2
                size_hint_y: 0.2
                height: self.minimum_height
                orientation: 'vertical'

        ScrollView:
            pos: 0, 0

            TreeView:
                id: main_cuentas
                hide_root: True
                size_hint_y: None

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2

            Label:
                text: "Status bar..."

            Button:
                text: 'Add'
                size_hint_x: 0.2
                on_press: root.add_transaction()

