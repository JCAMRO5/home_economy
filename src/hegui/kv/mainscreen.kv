<MainPanel>:
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Welcome to application"
            font_size: 32

        RV:
            viewclass: 'Label'

            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        Button:
            text: "Disconnect"
            font_size: 24
            on_press: root.disconnect()
