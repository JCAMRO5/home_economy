
<PaginaPlugins>:
    orientation: 'vertical'
    spacing: 1
    rvp: rvp

    AppActionBar:
        size_hint: (1., 0.1)

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Plugins"
            font_size: 15
            size_hint_y: 0.3

        RV:
            id: rvp
            viewclass: 'SelectableLabel'
            SelectableRecycleBoxLayout:
                key_selection: "True"
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: False
                touch_multiselect: True
                touch_deselect_last: True

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: 'Run Selected Plugin'
                #size_hint_x: 0.2
                on_press: root.run_selected_plugin()

            Button:
                text: 'Run All Plugins'
                #size_hint_x: 0.2
                on_press: root.run_all_plugins()

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
